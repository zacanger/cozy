#!/usr/bin/env cozy


# all args
let x = fn () {
    let a = sys.args();
    print("We received ", len(a), " arguments to our script.");
    mutable i = 0;
    for (i < len(a)) {
        print("\t", i, " " , a[i]);
        i++
    }
}
x()

# flags by name
# try with:
# ./cozy ./examples/arguments.cz --foo=bar --asdf ghjkl --qwerty -x
print(sys.flag("foo"));
print(sys.flag("asdf"));
print(sys.flag("qwerty"));
print(sys.flag("x"));
print(sys.flag("absent-flag"));
