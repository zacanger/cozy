let test = fn(suite, cb) {
    mutable id = 0;
    mutable failed = 0;

    printf("# %s\n", suite);

    let handle_assertion = fn(val, msg = "Result was not 'true'!") {
        id++;
        if (!val) {
            printf("not ok %d - %s\n", id, msg);
            failed++;
        } else {
            printf("ok %d - %s\n", id, msg);
        }
    };

    cb(handle_assertion);

    # Print total amount of tests
    printf("1..%d\n", id);
};
