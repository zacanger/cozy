#!/usr/bin/env cozy

# all args
let a = os.args();
print("We received ", len(a), " arguments to our script.");
mutable i = 0;
for (i < len(a)) {
   print("\t", i, " " , a[i]);
   i++
}

# flags by name
# try with:
# ./cozy ./examples/arguments.cz --foo=bar --asdf ghjkl --qwerty -x
print(os.flag("foo"));
print(os.flag("asdf"));
print(os.flag("qwerty"));
print(os.flag("x"));
print(os.flag("absent-flag"));
