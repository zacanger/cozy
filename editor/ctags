--regex-cozy=/(let|mutable)[ \t]+([a-zA-Z_][a-zA-Z0-9_]+)/\2/v,variable/
--regex-cozy=/macro[ \t]+([a-zA-Z_][a-zA-Z0-9_]+)/\1/m,macro/
