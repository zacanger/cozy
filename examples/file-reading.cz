let fh = open("/etc/passwd");

# Count of lines
mutable lines = 0;

# Read a line
let r = fh.read();

# Loop while that is non-empty
for (len(r) > 0) {
     # Bump the line-count
     lines++;

     # strip newlines / space, and show the output
     r = r.trim()
     print("Read: '", r, "'");

     # loop
     r = fh.read();
};
fh.close();

print("Read:" , lines, " lines.");
